<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilterActivity"
    android:background="@color/background">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Grade Level"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/filter_left"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_left_enabled"/>
        <TextView
            android:id="@+id/filter_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"/>
        <ImageView
            android:id="@+id/filter_right"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right_enabled"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Clubs and Organizations"
        android:textSize="16sp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <ListView
        android:id="@+id/filter_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:divider="@color/background"
        android:dividerHeight="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/filter_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="cancel" />
        <Button
            android:id="@+id/filter_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="confirm"/>
    </LinearLayout>
</LinearLayout>